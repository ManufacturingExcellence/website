---
import { Icon } from 'astro-icon';
import { SITE } from '~/config.mjs';

const items = [
	[
		{
			title: 'Multi-site, multi-location asset hierarchy',
			description:
				'Centrally manage all assets & their hierarchies across multiple sites and multiple locations within a site.',
			icon: 'tabler:brand-tailwind',
		},
		{
			title: 'Track and optimize asset lifecycle',
			description:
				'Right from asset aquisition to its end of life, track every stage og every asset to optimize its value.',
			icon: 'tabler:brand-tailwind',
		},
		{
			title: 'Inventory management',
			description:
				'Keep stock of spareparts, materials and tools required to ensure timely availability for workorder completion.',
			icon: 'tabler:list-check',
		},
	],
	[
		{
			title: 'Automate maintenance',
			description:
				'Create job & maintenance plans and automate work order creation based on time based & meter based frequencies.',
			icon: 'tabler:list-check',
		},
		{
			title: 'Manage workorders & service requests',
			description: 'Automate workorder & service request scheduling and track them to completion based on priority',
			icon: 'tabler:components',
		},
		{
			title: 'Insights & analytics',
			description: `Get insights at an organization, site or individual asset level. Make informed decisions.`,
			icon: 'tabler:bulb',
		},
	],
];
---

<section class="scroll-mt-16" id="features">
	<div class="px-4 py-16 mx-auto max-w-6xl lg:px-8 lg:py-20">
		<div class="mb-10 md:mx-auto sm:text-center md:mb-12 max-w-3xl">
			<p class="text-base text-primary-600 dark:text-primary-200 font-semibold tracking-wide uppercase">Features</p>
			<h2 class="text-4xl md:text-5xl leading-tighter tracking-tighter mb-4 font-heading">
				What you get with <span class="whitespace-nowrap font-bold">{SITE.name}</span>
			</h2>
			<p class="max-w-3xl mx-auto sm:text-center text-xl text-gray-600 dark:text-slate-400">
				Whether you are a SMB or a large enterprise, Reliable has features to meet your specific requirements.
			</p>
		</div>
		<div class="grid mx-auto space-y-6 md:grid-cols-2 md:space-y-0">
			{
				items.map((subitems) => (
					<div class="space-y-8 sm:px-8">
						{subitems.map(({ title, description, icon }) => (
							<div class="flex flex-row max-w-md">
								<div class="mb-4 mr-4">
									<div class="flex items-center justify-center w-12 h-12 rounded-full bg-primary-500 dark:bg-primary-700">
										{icon && <Icon name={icon} class="w-6 h-6 text-white icon-light" />}
									</div>
								</div>
								<div>
									<h3 class="mb-3 text-xl font-bold">{title}</h3>
									<p class="text-gray-600 dark:text-slate-400">{description}</p>
								</div>
							</div>
						))}
					</div>
				))
			}
		</div>
	</div>
</section>
