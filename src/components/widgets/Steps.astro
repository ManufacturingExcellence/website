---
import { Icon } from 'astro-icon';
import { Picture } from '@astrojs/image/components';

const items = [
	{
		step: 1,
		title: 'Acquire',
		description:
			'Centrally manage all assets & their hierarchies across multiple sites and multiple locations within a site.',
	},
	{
		step: 2,
		title: 'Operate',
		description:
			'Centrally manage all assets & their hierarchies across multiple sites and multiple locations within a site.',
	},
	{
		step: 3,
		title: 'Maintain',
		description:
			'Centrally manage all assets & their hierarchies across multiple sites and multiple locations within a site.',
	},
	{
		step: 4,
		title: 'Decommission',
		description:
			'Centrally manage all assets & their hierarchies across multiple sites and multiple locations within a site.',
	},
];
---

<section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-6xl">
	<h2 class="mb-8 text-3xl lg:text-4xl font-bold font-heading">Tracking the asset lifecycle</h2>

	<div class="grid gap-6 row-gap-10 md:grid-cols-2">
		<div class="md:pb-6 md:pr-16">
			{
				items.map(({ step, title, description }) => {
					return (
						<div class="flex">
							<div class="flex flex-col items-center mr-4">
								<div>
									<div class="flex items-center justify-center w-10 h-10 rounded-full border-primary-600 border-2">
										<Icon name="tabler:arrow-down" class="w-6 h-6 text-primary-600 dark:text-slate-200" />
									</div>
								</div>
								<div class="w-px h-full bg-gray-300 dark:bg-slate-500" />
							</div>
							<div class="pt-1 pb-8">
								<p class="mb-2 text-xl font-bold text-gray-900 dark:text-slate-300">
									Step {step}: {title}
								</p>
								<p class="text-gray-600 dark:text-slate-400">{description}</p>
							</div>
						</div>
					);
				})
			}

			<div class="flex">
				<div class="flex flex-col items-center mr-4">
					<div>
						<div
							class="flex items-center justify-center w-10 h-10 rounded-full border-primary-600 border-2 bg-primary-600"
						>
							<Icon name="tabler:check" class="w-6 h-6 text-white dark:text-slate-200" />
						</div>
					</div>
				</div>
				<div class="pt-1">
					<p class="mb-2 text-xl font-bold text-gray-900 dark:text-slate-300">Repeat!</p>
					<p class="text-gray-600 dark:text-slate-400"></p>
				</div>
			</div>
		</div>
		<div class="relative">
			<Picture
				class="inset-0 object-cover rounded-md md:absolute bg-gray-400 dark:bg-slate-700"
				src={import('~/assets/images/lifecycle.png')}
				widths={[400, 400]}
				sizes="(max-width: 768px) 100vw, 400px"
				alt="Astronaut"
				aspectRatio="400:400"
			/>
		</div>
	</div>
</section>
